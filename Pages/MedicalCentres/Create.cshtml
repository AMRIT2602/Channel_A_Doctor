@page
@model Channel_A_Doctor.Pages.MedicalCentres.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Register</h2>

<h4>MedicalCentre</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MedicalCentre.Name" class="control-label"></label>
                <input asp-for="MedicalCentre.Name" class="form-control" />
                <span asp-validation-for="MedicalCentre.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedicalCentre.Phone" class="control-label"></label>
                <input asp-for="MedicalCentre.Phone" class="form-control" />
                <span asp-validation-for="MedicalCentre.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
