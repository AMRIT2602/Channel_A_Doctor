@page
@model Channel_A_Doctor.Pages.Doctors.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Doctor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Doctor.Id" />
            <div class="form-group">
                <label asp-for="Doctor.Name" class="control-label"></label>
                <input asp-for="Doctor.Name" class="form-control" />
                <span asp-validation-for="Doctor.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doctor.Charge" class="control-label"></label>
                <input asp-for="Doctor.Charge" class="form-control" />
                <span asp-validation-for="Doctor.Charge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Doctor.MedicalCentreId" class="control-label"></label>
                <select asp-for="Doctor.MedicalCentreId" class="form-control" asp-items="ViewBag.MedicalCentreId"></select>
                <span asp-validation-for="Doctor.MedicalCentreId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-dark"/>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
